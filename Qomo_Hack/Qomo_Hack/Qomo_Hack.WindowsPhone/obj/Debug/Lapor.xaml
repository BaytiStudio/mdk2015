<Page
    x:Class="Qomo_Hack.Lapor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Qomo_Hack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <TextBlock Text="QOMO" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,0,0"/>
            <TextBlock Text="Lapor Harga" Margin="0,-6.5,0,26.5" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}"/>
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->
        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">
            <ScrollViewer>
                <StackPanel>
                    <Button x:ConnectionId='1' Content="Get Location" FontSize="25" HorizontalAlignment="Center"                ></Button>
                    
                    <StackPanel Orientation="Horizontal" x:Name="prov" Visibility="Collapsed">
                        <TextBlock Text="Provinsi : " FontSize="20" Margin="0,0,5,0"></TextBlock>    
                        <TextBlock Text="Banten" Name="provinsi" FontSize="20" FontWeight="Bold"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" x:Name="kota" Visibility="Collapsed">
                        <TextBlock Text="Kab/Kota : " FontSize="20" Margin="0,0,5,0"></TextBlock>
                        <TextBlock Text="Tangerang Selatan" Name="kabkota" FontSize="20" FontWeight="Bold"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" x:Name="kec" Visibility="Collapsed">
                        <TextBlock Text="Kecamatan : " FontSize="20" Margin="0,0,5,0"></TextBlock>
                        <TextBlock Text="Ciputat" Name="kecamatan" FontSize="20" FontWeight="Bold"></TextBlock>
                    </StackPanel>


                    <ComboBox ItemsSource="{Binding Items}" Margin="0,10,0,0">
                        <ComboBox.Header>
                            <TextBlock Text="Komoditas" FontSize="17"></TextBlock>
                        </ComboBox.Header>
                        <!--Class Bindingnya blm bener-->
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                                <!--Text nya blm bener-->
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Text="Jenis" FontSize="17"></TextBlock>
                    <TextBox Name="jenis_kom" PlaceholderText="Jenis"></TextBox>
                    <TextBlock Text="Lapor Sebagai" FontSize="17"></TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Produsen" Name="produsen" Visibility="Visible"></RadioButton>
                        <RadioButton Content="Distributor" Name="distributor" Visibility="Collapsed"></RadioButton>
                        <RadioButton Content="Konsumen" Name="konsumen" Visibility="Visible"></RadioButton>
                    </StackPanel>
                    <TextBlock Text="Harga" FontSize="17"></TextBlock>
                    <TextBox PlaceholderText="Harga Komoditas /kg" InputScope="Number" Name="hrg_kom"></TextBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:ConnectionId='2' Content="Tweet"                     Margin="0,0,10,0"></Button>
                        <Button x:ConnectionId='3' Content="SMS"                  ></Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            
            
        </Grid>
    </Grid>
</Page>

